<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/workspace_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Workspaces"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:textColor="@color/black"
        android:fontFamily="@font/intermedium"
        android:textSize="14dp"

        android:layout_marginStart="16dp" />

    <ImageButton
        android:id="@+id/add_workspace_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plus"

        app:tint="@color/workspace_blue"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginEnd="16dp"

        android:background="#00000000"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/workspace_recycler_view"
        android:layout_width="0dp"
        android:layout_height="50dp"

        app:layout_constraintTop_toBottomOf="@id/workspace_title_text_view"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>